{
  "name": "@vuepress/configs",
  "private": true,
  "scripts": {
    "lint": "eslint packages",
    "lint:all": "eslint --ext .js,.ts,.vue .",
    "prepare": "husky install",
    "release": "pnpm lint && lerna publish"
  },
  "lint-staged": {
    "*.{json,md}": "prettier --write",
    "!(test)/**/*.js": "eslint --fix",
    ".*.js": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "prettier": "prettier-config-vuepress",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@lerna-lite/cli": "^2.4.1",
    "@lerna-lite/publish": "^2.4.1",
    "eslint": "^8.42.0",
    "eslint-config-vuepress": "workspace:*",
    "eslint-config-vuepress-typescript": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-config-vuepress": "workspace:*",
    "sort-package-json": "^2.4.1",
    "tsconfig-vuepress": "workspace:*",
    "typescript": "^5.1.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/node",
        "eslint",
        "eslint-plugin-import",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "prettier",
        "typescript"
      ]
    }
  }
}
